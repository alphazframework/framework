{
    "name": "zest/framework",
    "description": "The Zest Framework.",
    "keywords": ["framework", "zest"],
    "license": "MIT",
    "require": {
        "php": "^7.2|8.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "authors": [
        {
            "name": "Muhamamad Umer Farooq",
            "email":"mumerfarooqlablnet01@gmail.com",
            "homepage": "https://zestframework.github.io/"
        }
    ],
    "autoload": {
        "psr-4": {
             "Zest\\": "src/"
        },
        "files":["src/functions/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Framework\\Tests\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config":{
        "optimize-autoloader":true
    },
    "prefer-stable": true
}
